<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.module</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_entry_source']" position="after">
                <field name="work_with_attendance" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//group[@name='salary']" position="inside">
                <label for="daily_rate"/>
                <div class="o_row mw-50" name="daily_rate">
                    <field name="daily_rate" class="oe_inline o_hr_narrow_field" nolabel="1" readonly="0"/>
                    <div class="mb-3" name="wage_period_label">/ Day</div>
                </div>

                <label for="hourly_rate"/>
                <div class="o_row mw-50" name="daily_rate">
                    <field name="hourly_rate" class="oe_inline o_hr_narrow_field" nolabel="1" readonly="0"/>
                    <div class="mb-3" name="wage_period_label">/ Hour</div>
                </div>
                <field name="bonus_public_holiday"/>
            </xpath>
            <!-- Add fields to an existing group -->
            <xpath expr="//notebook/page[@name='other']" position="after">
                <page string="Rules" name="rules" invisible="not work_with_attendance">
                    <group>
                        <field name="take_overtime" widget="boolean_toggle"/>
                        <field name="apply_lateness" widget="boolean_toggle"/>
                        <field name="absence" widget="radio"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Inherit List View -->

</odoo>